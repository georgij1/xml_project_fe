{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "paths": {
    "@assets": ["src/assets"],
    "@assets/*": ["src/assets/*"],
    "@pages/*": ["src/pages/*"],
    "@forms/*": ["src/forms/*"],
    "@components/*": ["src/components/*"],
    "@": ["src"],
    "@/*": ["src/*"],
  }
}
